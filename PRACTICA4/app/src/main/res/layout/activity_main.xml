<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/numero1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMERO 1 :"
            android:textSize="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="180dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/numero1_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PONER UN NUMERO"
            android:numeric="integer"
            android:layout_toEndOf="@id/numero1_textview"
            android:layout_alignBottom="@id/numero1_textview"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/numero2_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMERO 2 :"
            android:textSize="30dp"
            android:layout_below="@id/numero1_textview"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/numero2_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PONER UN NUMERO"
            android:numeric="integer"
            android:layout_toEndOf="@id/numero2_textview"
            android:layout_alignBottom="@id/numero2_textview"
            android:layout_marginLeft="30dp"
            />

        <Button
            android:id="@+id/operaciones_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numero2_textview"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:text="operaciones" />

    </RelativeLayout>


</layout>