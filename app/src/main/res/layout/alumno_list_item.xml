   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="16dp">

       <TextView
           android:id="@+id/grupo_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:textSize="17sp"
           android:textColor="@color/black"
           tools:text="1 B" />

       <TextView
           android:id="@+id/nombre_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:textSize="17sp"
           android:textColor="@color/black"
           android:layout_toEndOf="@id/grupo_textview"
           tools:text="EDGAR JAVIER JUAREZ VILLALVAZO" />

       <TextView
           android:id="@+id/edad_textview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_toEndOf="@id/nombre_textview"
           android:textSize="17sp"
           android:textColor="@color/black"
           tools:text="26" />

   </RelativeLayout>
